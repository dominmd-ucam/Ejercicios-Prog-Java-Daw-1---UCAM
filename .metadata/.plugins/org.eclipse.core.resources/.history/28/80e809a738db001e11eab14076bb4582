		listapreguntas.add(pregunta4);
		Pregunta pregunta5 = new Pregunta (05,"Cual es la capital de Spain?","Madrid","Barcelona","Murcia",true,false,false);
		listapreguntas.add(pregunta5);
		Pregunta pregunta6 = new Pregunta (06,"Cual es la capital de Spain?","Madrid","Barcelona","Murcia",true,false,false);
		listapreguntas.add(pregunta6);
